// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BallChaser {
  id          Int          @id @unique
  name        String
  activeMatch ActiveMatch?
  rank        Leaderboard?
  queue       Queue?
}

model Leaderboard {
  // needs to have format: [semester][year] ex: Summer2020
  seasonKey String
  playerId  Int        @unique
  player    BallChaser @relation(fields: [playerId], references: [id])
  mmr       Int
  wins      Int        @default(0)
  losses    Int        @default(0)

  @@id([seasonKey, playerId])
}

model ActiveMatch {
  id           String     @id @default(uuid()) @db.Uuid
  playerId     Int        @unique
  player       BallChaser @relation(fields: [playerId], references: [id])
  team         Int        @db.SmallInt
  reportedTeam Int?       @db.SmallInt
}

model Queue {
  playerId  Int        @id @unique
  player    BallChaser @relation(fields: [playerId], references: [id])
  team      Int?       @db.SmallInt
  isCap     Boolean    @default(false)
  queueTime DateTime   @db.Timestamp()
}
