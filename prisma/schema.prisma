// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BallChaser {
  id          String        @id @unique
  name        String
  activeMatch ActiveMatch?
  rank        Leaderboard[]
  queue       Queue?
}

model Season {
  seasonSemester String
  seasonYear     String
  seasonEnded    DateTime?
  leaderboard    Leaderboard[]

  @@id([seasonSemester, seasonYear])
}

model Leaderboard {
  seasonSemester String
  seasonYear     String
  season         Season     @relation(fields: [seasonSemester, seasonYear], references: [seasonSemester, seasonYear])
  playerId       String
  player         BallChaser @relation(fields: [playerId], references: [id])
  mmr            Int
  wins           Int        @default(0)
  losses         Int        @default(0)

  @@id([seasonSemester, seasonYear, playerId])
}

model ActiveMatch {
  // match ID will be repeated so cannot be generated by the DB
  id           String
  playerId     String     @id @unique
  player       BallChaser @relation(fields: [playerId], references: [id])
  team         Int        @db.SmallInt
  reportedTeam Int?       @db.SmallInt
  brokenQueue  Boolean    @default(false)
}

model Queue {
  playerId  String     @id @unique
  player    BallChaser @relation(fields: [playerId], references: [id])
  team      Int?       @db.SmallInt
  isCap     Boolean    @default(false)
  queueTime DateTime   @db.Timestamp()
}
